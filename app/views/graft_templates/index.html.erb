<div class="container-fluid">

	<div class="row">
		<div class="text-center">
			<h2 class="title">Who's Paying for your Pol</h2>
				<p>A simple tool to find your elected officials "best" friends</p>
		</div>
	</div>

	<div class="row">	
		<div class="col-md-4">
			<form ng-submit="grafts.findBy(id)">
				<input type="text" ng-model="id" placeholder="Enter 2 Letter State ID">
				<button> Submit </button>
				<button ng-click="grafts.reset()">Reset</button>	
			</form>

			<div ng-repeat="pol in pols">
					<button class="butt" ng-click="grafts.findPers(pol['@attributes'].cid)">
					 {{pol["@attributes"].firstlast}}
					</button>
			</div>
		</div>

		<div class="col-md-4">
			<div ng-show="candidate in candidates">
				<h3> Name: {{candidate["@attributes"].cand_name}}</h3>
				<h3> State: {{candidate["@attributes"].state}}</h3>
				<dl>
					<dt>Party</dt> 
					<dd>{{candidate["@attributes"].party}}</dd>
						<dt>First Elected</dt>
						<dd> {{candidate["@attributes"].first_elected}}</dd>
						<dt>Total Contributions</dt>
						<dd>${{candidate["@attributes"].total}}</dd>
						<dt>Total Spent</dt>
						<dd>${{candidate["@attributes"].spent}}</dd>
						<dt>Cash on Hand</dt>
						<dd>${{candidate["@attributes"].cash_on_hand}}</dd>
						<dt>Total Debt</dt>
						<dd>${{candidate["@attributes"].debt}}</dd>
			</div>
		</div>


		<div class="col-md-4">			
			<button class="butt" ng-click="grafts.findDon(candidate['@attributes'].cid)">Donors</button>
				<div ng-repeat="(org_name, total) in donors">
					<ul>
						<li> {{org_name}} : {{total}} </li>
					</ul>
				</div>

			<div>
				<button class="butt" ng-click="grafts.findInd(candidate['@attributes'].cid)">	Industries</button>
				<div ng-repeat="(industry_name, total) in industries">
					<ul>
						<li>{{industry_name}}: {{total}}</li>
					</ul>
				</div>
			</div>			
		</div>
	</div>

	<div class="row">
		<div class="col-md-5 col-md-offset-4">
			<div id="graph">
				<div ng-show="grafts.graphChart(@scope.industries)">
		     	<div id="tooltip" class="hidden">
	          <p><strong>Industries</strong></p>
	          <p><span id="value">100</span></p>
	      	</div>
	      </div>
	     </div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-5 col-md-offset-4">
			<div id="graph">
				<div ng-show="grafts.graphChartD(@scope.donors)">
		     	<div id="tooltip" class="hidden">
	          <p><strong>Top Donors</strong></p>
	          <p><span id="value">100</span></p>
	      	</div>
	      </div>
	     </div>
		</div>
	</div>



</div>





 



